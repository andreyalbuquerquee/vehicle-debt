{
  "compilerOptions": {
    "moduleDetection": "force",
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2022",
    "module": "Preserve",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["tests", "coverage", "jest.config.js"]
}

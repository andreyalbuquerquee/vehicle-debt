{
  "compilerOptions": {
    "moduleDetection": "force",
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2022",
    "module": "node16",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "paths": {
      "@adapters/*": ["./src/adapters/*"],
      "@core/*": ["./src/core/*"],
      "@infra/*": ["./src/infra/*"],
      "@main/*": ["./src/main/*"],
      "@modules/*": ["./src/modules/*"],
      "@types/*": ["./src/@types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["tests", "coverage", "jest.config.js"]
}
